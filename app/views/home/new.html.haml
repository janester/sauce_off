= form_tag vote_path do
  %h1.lobster Choose Your Favorite:
  -unless flash[:alert].nil?
    = flash[:alert]
    %br
  -@candidates.each_with_index do |can, i|
    = radio_button_tag :candidate_id, can.id
    = label_tag "Sauce #{i+1}", nil, class:"inline-label"
    %br
  %h1.lobster Enter Your Information:
  = label_tag :name, nil, class:"label"
  = text_field_tag "voter[name]", nil, placeholder: "e.g.  Jane Doe", class:"text-input"
  %br
  = label_tag "Email*", nil, class:"label"
  = text_field_tag "voter[email]", nil, placeholder: "e.g.  jane@doe.com", class:"text-input"
  %br
  = submit_tag "Vote!", class:"btn"
%p *you will be added to the mailing list for our e-newsletter